<%= form_for @item, html: {class: "nifty_form"} do |f| %>
  <%= f.text_field :title, placeholder: 'title' %><br />
  <%= f.text_area :description, size: "60x12", placeholder: 'description' %><br />
  <%= f.text_field :price, placeholder: 'price' %><br />
  <%= f.submit "add item" %>
<% end %>
